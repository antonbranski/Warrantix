        android:toXScale="1.1" android:toYScale="1.0"
        android:duration="50" android:fillBefore="false" />
    <scale android:fromXScale="1.1" android:fromYScale="1.0"
        android:toXScale="1.07" android:toYScale="1.0"
        android:startOffset="50" android:duration="50"
        android:fillBefore="false" />
    <scale android:fromXScale="1.0" android:fromYScale="1.0"
        android:startOffset="100"
        android:toXScale="0.7" android:toYScale="1.0"
        android:duration="100" android:fillBefore="false" />
    <translate android:fromXDelta="-200" android:fromYDelta="-200"
        android:startOffset="200"
        android:duration="200" />
