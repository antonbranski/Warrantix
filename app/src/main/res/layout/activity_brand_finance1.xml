<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/useraccountbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">

            <ImageButton
                android:id="@+id/brand_arrow"
                style="@style/DefaultBackButtonStyle" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/control_space_margin_tiny"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="PURCHASE DETAIL"
                android:textColor="@color/wx_tag_color"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"></LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/useraccountbar"
        android:background="@color/wx_secondary_color">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewInProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/control_space_margin_small">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="@dimen/_119sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/registration_stepper_one" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <TextView
                                    android:id="@+id/receive_proposalTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:text="@string/Receive_proposal"
                                    android:textColor="@color/wx_text_color"
                                    android:textSize="@dimen/_11sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardView1InProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewInProofPurchase"
                android:layout_marginTop="@dimen/control_space_margin_small">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--COMPANY NAME -->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_medium"
                            android:text="COMPANY"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginBottom="@dimen/control_space_margin_tiny"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectCompanyTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:hint="Company"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />
                        </LinearLayout>

                        <!--BRAND NAME -->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_medium"
                            android:text="BRAND"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginBottom="@dimen/control_space_margin_tiny"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectBrandTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:hint="Brand"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/brandListView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <!--MEDEL NUMBER -->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:text="MODEL"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectModelTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:hint="Model"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />

                        </LinearLayout>

                        <!--PRICE NUMBER -->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:text="PRICE"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectPriceTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:hint="Price"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />

                        </LinearLayout>

                        <ListView
                            android:id="@+id/configurationListView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <!--ADDRESS-->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:text="ADDRESS"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectLocationTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:layout_marginRight="@dimen/control_space_margin_large"
                                android:gravity="center_vertical"
                                android:hint="Enter Your Address"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />

                        </LinearLayout>

                        <!--CITY-->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:text="CITY"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectCityTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:layout_marginRight="@dimen/control_space_margin_large"
                                android:gravity="center_vertical"
                                android:hint="Enter Your City"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />

                        </LinearLayout>

                        <!--PINCODE-->
                        <TextView
                            style="@style/Heading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:text="PINCODE"
                            android:textColor="@color/wx_title_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/selectPincodeTXT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/control_space_margin_large"
                                android:layout_marginRight="@dimen/control_space_margin_large"
                                android:gravity="center_vertical"
                                android:hint="Enter Your Pincode"
                                android:shadowColor="@color/wx_hint_color"
                                android:textColorHint="@color/wx_hint_color"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:background="@color/wx_fourth_color" />

                        </LinearLayout>

                        <ListView
                            android:id="@+id/locationListView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/otherLocationTXT"
                            style="@style/RegularEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/control_space_margin_small"
                            android:hint="Enter the location"
                            android:paddingRight="@dimen/control_space_margin_large"
                            android:textColorHint="@color/wx_hint_color"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_horizontal">

                            <Button
                                android:id="@+id/nextBTN"
                                style="@style/DefaultButton"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:text=" NEXT "
                                android:textColor="@drawable/accent_button_textcolor" />
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
