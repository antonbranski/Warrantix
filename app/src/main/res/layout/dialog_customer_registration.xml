<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/wx_primary_color"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lblTitleInMessageDialog"
        style="@style/BoldEdit"
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_marginBottom="@dimen/control_space_margin_medium"
        android:layout_centerHorizontal="true"
        android:text="             Customer Registration             "
        android:layout_gravity="center"
        android:textColor="@color/wx_accent_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/dividerInMessageDialog"
        android:layout_below="@id/lblTitleInMessageDialog"
        android:background="@color/wx_third_color"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/lblCustomerName"
        style="@style/Heading3"
        android:textColor="@color/wx_title_color"
        android:text="Customer Name"
        android:visibility="gone"
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtCustomerName"
        style="@style/RegularEdit"
        android:visibility="gone"
        android:textColorHint="@color/wx_hint_color"
        android:paddingRight="@dimen/control_space_margin_large"
        android:hint="Enter Customer Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblMobileNumber"
        style="@style/Heading3"
        android:textColor="@color/wx_title_color"
        android:text="Mobile Number"
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtMobileNumber"
        style="@style/RegularEdit"
        android:textColorHint="@color/wx_hint_color"
        android:inputType="number|none"
        android:digits="0123456789"
        android:paddingRight="@dimen/control_space_margin_large"
        android:hint="Enter Mobile Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblEmail"
        style="@style/Heading3"
        android:textColor="@color/wx_title_color"
        android:text="Email"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtEmail"
        style="@style/RegularEdit"
        android:textColorHint="@color/wx_hint_color"
        android:paddingRight="@dimen/control_space_margin_large"
        android:hint="Enter Mail Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblPassword"
        style="@style/Heading3"
        android:textColor="@color/wx_title_color"
        android:text="Password"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtPassword"
        style="@style/RegularEdit"
        android:textColorHint="@color/wx_hint_color"
        android:paddingRight="@dimen/control_space_margin_large"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtErrorMessage"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/control_space_margin_small"
        android:textColor="@color/wx_enthusiastic_color"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/control_space_margin_small"
        android:layout_marginRight="@dimen/control_space_margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnOkInMessageDialog"
        style="@style/DefaultButton"
        android:textColor="@drawable/accent_button_textcolor"
        android:text="DONE"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblMessageInMessageDialog"
        android:layout_width="@dimen/_120sdp" />
</LinearLayout>
