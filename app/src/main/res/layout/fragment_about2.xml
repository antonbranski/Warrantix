<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_primary_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal">
            <com.warrantix.main.customview.framevideoview.FrameVideoView
                android:id="@+id/tutorial2"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView1"
                style="@style/BoldEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ORGANIZE &amp; MANAGE ALL APPS"
                android:textColor="@color/wx_accent_color"
                android:textSize="@dimen/_11sdp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtView2"
                style="@style/BoldEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="OF FAVORITE BRANDS &amp; RETAILERS"
                android:textColor="@color/wx_accent_color"
                android:textSize="@dimen/_11sdp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtView3"
                style="@style/BoldEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="USING APP-IN-A-APP TECHNOLOGY"
                android:textColor="@color/wx_accent_color"
                android:textSize="@dimen/_11sdp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/control_space_margin_small"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center"
                android:text="No more App Icon Clutter. Just One Warrantix Wallet."
                android:maxLines="1"
                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:text="Apps of favorite Brands are Highly Integrated,"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:text="but still remain Independent."
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
