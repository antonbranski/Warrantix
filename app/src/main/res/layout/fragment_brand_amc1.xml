<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wx_secondary_color">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewInProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/control_space_margin_small">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/control_space_margin_small"
                                android:layout_weight="1.3"
                                android:gravity="left">

                                <TextView
                                    android:id="@+id/nameTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:text="HERO MOTOCROP"
                                    android:textColor="@color/blackcolor"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/name_explainTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:text="@string/name_explain1"
                                    android:textColor="@color/wx_list_text_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/control_space_margin_small"
                                android:layout_marginLeft="@dimen/control_space_margin_small"
                                android:layout_marginRight="@dimen/control_space_margin_small"
                                android:layout_marginTop="@dimen/control_space_margin_small"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="center"
                                    android:src="@drawable/hero3" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="left">

                                <TextView
                                    android:id="@+id/tata_explainTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/control_space_margin_small"
                                    android:layout_marginRight="@dimen/control_space_margin_small"
                                    android:text="Starting at Rs. 3,500, Extended Warranty covers wear and tear. This doesn't cover any repairs connected with accidents."
                                    android:textColor="@color/wx_tag_color"
                                    android:textSize="@dimen/_11sdp" />


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1InProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewInProofPurchase"
                android:layout_marginTop="@dimen/control_space_margin_small">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.warrantix.main.customview.TokenTextView
                                android:id="@+id/Insurance_Type"
                                style="@style/RegularTokenView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:hint="AMC Type"
                                android:shadowColor="@color/wx_tag_color"
                                android:textColor="@color/wx_tag_color"
                                android:textColorHint="@color/wx_tag_color"
                                android:textSize="@dimen/_12sdp" />

                            <ImageButton
                                android:id="@+id/amcTypeBTN"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignRight="@+id/Insurance_Type"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/check" />
                        </RelativeLayout>

                        <ListView
                            android:id="@+id/amcTypeView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.warrantix.main.customview.TokenTextView
                                android:id="@+id/Vendor"
                                style="@style/RegularTokenView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:hint="Service Provider"
                                android:shadowColor="@color/wx_tag_color"
                                android:textColor="@color/wx_tag_color"
                                android:textColorHint="@color/wx_tag_color"
                                android:textSize="@dimen/_12sdp" />

                            <ImageButton
                                android:id="@+id/serviceProviderBTN"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignRight="@+id/Vendor"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/check"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <ListView
                            android:id="@+id/serviceProviderView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.warrantix.main.customview.TokenTextView
                                android:id="@+id/Duration"
                                style="@style/RegularTokenView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:hint="@string/Duration"
                                android:shadowColor="@color/wx_tag_color"
                                android:textColor="@color/wx_tag_color"
                                android:textColorHint="@color/wx_tag_color"
                                android:textSize="@dimen/_12sdp" />

                            <ImageButton
                                android:id="@+id/durationTypeBTN"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignRight="@+id/Duration"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/check" />
                        </RelativeLayout>

                        <ListView
                            android:id="@+id/durationTypeView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.warrantix.main.customview.TokenTextView
                                android:id="@+id/Deal"
                                style="@style/RegularTokenView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:hint="@string/Deal"
                                android:shadowColor="@color/wx_tag_color"
                                android:textColor="@color/wx_tag_color"
                                android:textColorHint="@color/wx_tag_color"
                                android:textSize="@dimen/_12sdp" />

                            <ImageButton
                                android:id="@+id/dealTypeBTN"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignRight="@+id/Deal"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/check" />
                        </RelativeLayout>

                        <ListView
                            android:id="@+id/dealTypeView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginLeft="@dimen/control_space_margin_small"
                            android:layout_marginRight="@dimen/control_space_margin_small"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp" />

                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2InProofPurchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView1InProofPurchase"
                android:layout_marginBottom="@dimen/control_space_margin_small"
                android:layout_marginTop="@dimen/control_space_margin_small">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height2"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:text="MALL IN REBATE"
                                    android:textColor="@color/wx_enthusiastic_color"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:text="@string/RS_VALUE"
                                    android:textColor="@color/wx_list_text_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:text="@string/AMCDescription1"
                                android:textColor="@color/wx_tag_color"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center_horizontal">

                            <Button
                                style="@style/DefaultButtonRed"
                                android:layout_width="@dimen/_145sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:text=" NEXT"
                                android:textColor="@drawable/accent_button_textcolor_red" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/premiumTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:text="PREMIUM"
                                    android:textColor="@color/wx_enthusiastic_color"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right">

                                <TextView
                                    android:id="@+id/RS_VALUETXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:text="@string/RS_VALUE"
                                    android:textColor="@color/wx_list_text_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_total_height">

                            <TextView
                                android:id="@+id/Purchase_ProtectionTXT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:textColor="@color/wx_tag_color"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/termsTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:clickable="true"
                                android:text="@string/terms_and_conditions"
                                android:textColor="@color/wx_enthusiastic_color"
                                android:textSize="@dimen/_12sdp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/accept_select"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/square"
                                    android:clickable="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="@string/read_the_terms_conditions_i_agree"
                                    android:textColor="@color/wx_tag_color"
                                    android:textSize="@dimen/tiny_font_height" />

                                <TextView
                                    android:id="@+id/acceptTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:clickable="true"
                                    android:text="@string/I_accept_the_terms_and_conditions"
                                    android:textColor="@color/wx_enthusiastic_color"
                                    android:textSize="@dimen/tiny_font_height"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:gravity="center_horizontal">

                            <Button
                                android:id="@+id/nextBTN"
                                style="@style/DefaultButtonRed"
                                android:layout_width="@dimen/_145sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:text=" NEXT"
                                android:textColor="@drawable/accent_button_textcolor_red" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
