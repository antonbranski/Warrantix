<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/vd_sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wx_secondary_color">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/control_space_margin_small"
            android:layout_marginRight="@dimen/control_space_margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/wx_secondary_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/control_space_margin_small"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/amountTXT"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="AMOUNT"
                        android:textColor="@color/wx_tag_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/amountValueTXT"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="Rs. 5,000"
                        android:textColor="@color/wx_tag_color"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/salientfeatured"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/control_space_margin_small"
                    android:layout_marginTop="@dimen/control_space_margin_small"
                    android:gravity="center_vertical"
                    android:text="SELECT PAYMENT MODE"
                    android:textColor="@color/wx_tag_color"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"/>

                    <RadioButton
                        android:id="@+id/mode_creditcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/control_space_margin_medium"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@null"
                        android:button="@drawable/checkbox"
                        android:checked="true"
                        android:paddingLeft="@dimen/control_space_margin_small"
                        android:text="Credit card"
                        android:textColor="@color/wx_list_text_color"
                        android:textSize="@dimen/small_font_height" />


                    <RadioButton
                        android:id="@+id/mode_debitcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/control_space_margin_medium"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@null"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/control_space_margin_small"
                        android:text="Debit card"
                        android:textColor="@color/wx_list_text_color"
                        android:textSize="@dimen/small_font_height" />


                    <RadioButton
                        android:id="@+id/mode_netbanking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/control_space_margin_medium"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@null"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/control_space_margin_small"
                        android:text="Netbanking"
                        android:textColor="@color/wx_list_text_color"
                        android:textSize="@dimen/small_font_height" />

                    <RadioButton
                        android:id="@+id/mode_americancard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/control_space_margin_medium"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@null"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/control_space_margin_small"
                        android:text="American Express card"
                        android:textColor="@color/wx_list_text_color"
                        android:textSize="@dimen/small_font_height" />

                    <RadioButton
                        android:id="@+id/mode_mobiquikwallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/control_space_margin_medium"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@null"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/control_space_margin_small"
                        android:text="Mobikwik wallet"
                        android:textColor="@color/wx_list_text_color"
                        android:textSize="@dimen/small_font_height" />


                    <RadioButton
                        android:id="@+id/mode_paytmwallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/control_space_margin_medium"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@null"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/control_space_margin_small"
                        android:text="PayTM wallet"
                        android:textColor="@color/wx_list_text_color"
                        android:textSize="@dimen/small_font_height" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/entercarddetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/control_space_margin_small"
                    android:layout_marginTop="@dimen/control_space_margin_small"
                    android:gravity="center_vertical"
                    android:text="ENTER CARD DETAILS"
                    android:textColor="@color/wx_tag_color"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/control_space_margin_small"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Heading3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/control_space_margin_medium"
                        android:text="Card Number"
                        android:textColor="@color/wx_title_color" />

                    <EditText
                        android:id="@+id/cardnumberTXT"
                        style="@style/RegularEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:digits="0123456789"
                        android:hint="Enter Card Number"
                        android:inputType="number|none"
                        android:shadowColor="@color/wx_tag_color"
                        android:textColor="@color/wx_tag_color"
                        android:textSize="@dimen/tiny_font_height" />

                    <TextView
                        style="@style/Heading3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/control_space_margin_medium"
                        android:text="Name"
                        android:textColor="@color/wx_title_color" />

                    <EditText
                        android:id="@+id/numberoncardTXT"
                        style="@style/RegularEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="Enter name on card"
                        android:textColor="@color/wx_tag_color"
                        android:textSize="@dimen/tiny_font_height" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Heading3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/control_space_margin_medium"
                                android:text="Expiry"
                                android:textColor="@color/wx_title_color" />

                            <EditText
                                android:id="@+id/empiryTXT"
                                style="@style/RegularEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:focusable="false"
                                android:hint="Expiry (MM/YYYY)"
                                android:textColor="@color/wx_tag_color"
                                android:textSize="@dimen/tiny_font_height" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Heading3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/control_space_margin_medium"
                                android:text="CVV"
                                android:textColor="@color/wx_title_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/CVVTXT"
                                    style="@style/RegularEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:digits="0123456789"
                                    android:hint="CVV"
                                    android:inputType="number|none"
                                    android:maxLength="8"
                                    android:textColor="@color/wx_tag_color"
                                    android:textSize="@dimen/tiny_font_height" />

                                <ImageButton
                                    android:id="@+id/cvvInfoBTN"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/control_space_margin_medium"
                                    android:background="@drawable/default_layout_selector"
                                    android:src="@drawable/info" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_14sdp"></LinearLayout>

                    <Button
                        android:id="@+id/nextBTN"
                        style="@style/DefaultButtonRed"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:text=" NEXT"
                        android:textColor="@drawable/accent_button_textcolor_red" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_14sdp"></LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
