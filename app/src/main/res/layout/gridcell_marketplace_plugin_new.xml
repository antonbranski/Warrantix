<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wx_secondary_color"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/circle_tag_color"
        android:gravity="center"
        android:text="01"
        android:textSize="@dimen/tiny_font_height" />


    <TextView
        android:id="@+id/txt_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:gravity="center"
        android:text="DEFAULT"
        android:textSize="@dimen/tiny_font_height" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/control_space_margin_large"
        android:layout_marginTop="@dimen/control_space_margin_medium"
        android:src="@drawable/warrantix0" />


</LinearLayout>
